<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('css/signup-style.css') }}">
    <title>Sign Up</title>
    <style>
    #registration_form_password{
        display: flex;
    }
    #registration_form_image {
        background: transparent;
        border: none;
    }
    #registration_form_password > div:nth-child(2) > label, #registration_form_password > div:nth-child(1) > label{
        float: left;
        margin-bottom:10px
    }
 
    </style>
</head>
<body>

    <div class="signup-container">
        <h2>Sign Up</h2>
        <form method="post" action="{{ path('app_signup') }}" enctype="multipart/form-data">
            {{ form_start(form) }}

                
                <div class="form-group" style="display: flex;flex-direction: column;" >
                    <label for="{{ form.email.vars.id }}" style="text-align:justify;margin-bottom:10px">Email</label>
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>

                 <div class="form-group" style="display: flex;flex-direction: column;" >
                    
                    {{ form_widget(form.password) }}
                    {{ form_errors(form.password) }}
                </div>
      

         <div class="form-group" style="display: flex;flex-direction: column;" >
                    <label for="{{ form.name.vars.id }}" style="text-align:justify;margin-bottom:10px">Name</label>
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group" style="display: flex;flex-direction: column;" >
                    <label for="{{ form.image.vars.id }}" style="text-align:justify;margin-bottom:10px">Profile Image (optional)</label>
                    {{ form_widget(form.image) }}
                    {{ form_errors(form.image) }}
                </div>
          


            {{ form_end(form) }}

            <p>Already have an account? <a href="{{ path('app_login') }}">Login here</a>.</p>
        </form>
    </div>

</body>
</html>