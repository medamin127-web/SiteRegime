{% extends 'admin_panel/adminbase.html.twig' %}

{% block body %}
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.1); padding: 10px;">
        <div style="font-size: 24px; font-weight: bold; text-align: justify;">Edit Meal</div>
        <a href="{{ path('admin_plat') }}" style="text-decoration: none; color: #333;"><i class="fas fa-arrow-left"></i> Back</a>
    </div>

    <div style="max-width: 600px; margin: 0 auto; box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1); padding: 20px; border-radius: 10px; background-color: #f8f9fa;">
        {{ form_start(form) }}

        <div style="margin-bottom: 15px;">
            {{ form_label(form.nomplat) }}
            {{ form_widget(form.nomplat, {'attr': {'class': 'form-control', 'placeholder': 'Meal Name'}}) }}
        </div>

        <div style="margin-bottom: 15px;">
            {{ form_label(form.nbrCalories) }}
            {{ form_widget(form.nbrCalories, {'attr': {'class': 'form-control', 'placeholder': 'Number of Calories'}}) }}
        </div>

        <div style="margin-bottom: 15px;">
            {{ form_label(form.ingredients) }}
            {{ form_widget(form.ingredients, {'attr': {'class': 'form-control', 'placeholder': 'Ingredients'}}) }}
        </div>

        <div style="margin-bottom: 15px;">
            {{ form_label(form.cout) }}
            {{ form_widget(form.cout, {'attr': {'class': 'form-control', 'placeholder': 'Cost (DT)'}}) }}
        </div>

        <div style="margin-bottom: 15px;">
            {{ form_label(form.image) }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            {% if form.vars.value.image %}
                <img src="{{ asset('uploads/plat_images/' ~ form.vars.value.image) }}" alt="Current Image" style="max-width: 100%; margin-top: 10px;">
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100%;">Change</button>

        {{ form_end(form) }}

        {% if successMessage is defined %}
            <div id="successMessage" style="margin-top: 10px; color: green; text-align: center;">{{ successMessage }}</div>
        {% endif %}
    </div>
{% endblock %}