{% extends 'admin_panel/adminbase.html.twig' %}


{% block body %}
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.1); padding: 10px;">
        <div style="font-size: 24px; font-weight: bold; text-align: justify;">Create New Meal</div>
        <a href="{{ path('admin_plat') }}" style="text-decoration: none; color: #333;"><i class="fas fa-arrow-left"></i> Return</a>
    </div>

    <div style="max-width: 600px; margin: 0 auto;">
        <form method="post" action="{{ path('plat_new') }}" enctype="multipart/form-data" style="background-color: #f8f9fa; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div style="margin-bottom: 15px;">
                {{ form_label(form.nomplat, 'Meal Name:', {'label_attr': {'style': 'font-weight: bold; margin-bottom: 5px; display: block;'}}) }}
                {{ form_widget(form.nomplat, {'attr': {'style': 'width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 5px;'}}) }}
            </div>

            <div style="margin-bottom: 15px;">
                {{ form_label(form.nbrCalories, 'Number of Calories:', {'label_attr': {'style': 'font-weight: bold; margin-bottom: 5px; display: block;'}}) }}
                {{ form_widget(form.nbrCalories, {'attr': {'style': 'width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 5px;'}}) }}
            </div>

            <div style="margin-bottom: 15px;">
                {{ form_label(form.ingredients, 'Ingredients:', {'label_attr': {'style': 'font-weight: bold; margin-bottom: 5px; display: block;'}}) }}
                {{ form_widget(form.ingredients, {'attr': {'style': 'width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 5px; resize: vertical;'}}) }}
                <div id="charCount" style="margin-top: 5px; color: #777; font-size: 12px; text-align: right;">0/255</div>
            </div>

            <div style="margin-bottom: 15px;">
                {{ form_label(form.cout, 'Cost (DT):', {'label_attr': {'style': 'font-weight: bold; margin-bottom: 5px; display: block;'}}) }}
                {{ form_widget(form.cout, {'attr': {'style': 'width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 5px;'}}) }}
            </div>

            <div style="margin-bottom: 15px;">
                {{ form_label(form.image, 'Image:', {'label_attr': {'style': 'font-weight: bold; margin-bottom: 5px; display: block;'}}) }}
                {{ form_widget(form.image, {'attr': {'style': 'width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 5px;'}}) }}
            </div>

            <button type="submit" style="width: 100%; padding: 10px; background-color: #007bff; color: #fff; border: none; border-radius: 5px; cursor: pointer;">Save</button>

            {{ form_end(form) }}

            <div id="successMessage" style="display: none; margin-top: 10px; color: green; text-align: center;">Success! The new meal has been created.</div>
        </form>
    </div>

    <script>
        function updateCharCount(element) {
            document.getElementById('charCount').innerText = element.value.length + '/255';
        }
    </script>
{% endblock %}