{% extends 'admin_panel/adminbase.html.twig' %}
{% block body %}

    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.1); padding: 10px;">
        <div style="font-size: 24px; font-weight: bold; text-align: justify;">{{ plat.nomplat }}</div>
        <a href="{{ path('admin_plat') }}" style="text-decoration: none; color: #333;"><i class="fas fa-arrow-left"></i> Return</a>
    </div>

    <div style="display: flex; max-width: 800px; margin: 0 auto;">
        <div style="width: 400px; padding-right: 20px;">
            {% if plat.image %}
                <img src="{{ asset('uploads/plat_images/' ~ plat.image) }}" alt="{{ plat.nomplat }}" style="width: 100%; border-radius: 10px;">
            {% else %}
                No Image
            {% endif %}
        </div>
        <div>
            <h2 style="font-size: 1.5em; color: #333; margin-bottom: 10px;">{{ plat.nomplat }}</h2>
            <p >{{ plat.nbrCalories }} Calories</p>
            <p><strong></strong><span style="font-size: 1.7em; font-weight: bold;">{{ plat.cout }} DT</span></p>
            <h4 style="border-bottom: 1px solid #ccc; margin-top: 20px; margin-bottom: 10px;">Ingredients:</h4>
            <p>{{ plat.ingredients }}</p>
        </div>
    </div>

    <div style="text-align: center; margin-top: 20px;">
        <a href="{{ path('plat_edit', {'id': plat.id}) }}" class="btn btn-primary" style="margin-right: 10px;">Edit</a>
        <button class="btn btn-danger" onclick="deleteMeal('{{ path('plat_delete', {'id': plat.id}) }}')">Delete</button>
    </div>

    <script>
        function deleteMeal(deleteUrl) {
            if (confirm('Are you sure you want to delete this meal?')) {
                window.location.href = deleteUrl;
            }
        }
    </script>

{% endblock %}
